{
  "extends": null,
  "appId": "com.labar.goals-tracker",
  "productName": "Goals Tracker",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "default music",
      "to": "default music"
    }
  ],
  "extraMetadata": {
    "main": "dist/main.js"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility",
    "maintainer": "Labar <labar@local>"
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
